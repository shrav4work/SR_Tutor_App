<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_screen.MainActivity">

    <View
        android:id="@+id/backgound"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradientbgcurve" />
    <ImageView
        android:id="@+id/home"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/home" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home"
        android:layout_marginTop="71dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/card"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_border"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:strokeColor="@color/grey"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sourcesansproblack"
                    android:padding="24dp"
                    android:text="Welcome to SR Tutorials"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textFontWeight="1000"
                    android:textSize="24sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/set_home_location"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/primary"
                    android:text="Login as Tutor"
                    app:cornerRadius="15dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/skip"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/primary"
                    android:text="Login as Student"
                    app:cornerRadius="15dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>


    <TextView
        android:id="@+id/abt_srtut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="89dp"
        android:padding="15dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/trebuc"
        android:onClick="onClick"
        android:text="About SR Tutorials"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textFontWeight="1000"
        android:textSize="20sp" />


</RelativeLayout>