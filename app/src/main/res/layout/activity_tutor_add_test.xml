<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutor_.tutor_add_test"
    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corner_border"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:contextClickable="false"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:strokeColor="@color/blue_accent"
        app:strokeWidth="1.5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:id="@+id/linear_layout_1"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Shivagond Kotyal"
                    android:textSize="14sp"
                    android:id="@+id/stduent_name"
                    android:paddingVertical="5dp"
                    android:layout_weight="50"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="01FE19BCS144"
                    android:textSize="14sp"
                    android:id="@+id/stduent_id"
                    android:paddingVertical="5dp"
                    android:layout_weight="50"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:weightSum="300"
                android:id="@+id/linear_layout_2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"
                    android:textSize="14sp"
                    android:id="@+id/subject"
                    android:paddingVertical="5dp"
                    android:textAlignment="center"/>
                <TextView
                    android:textAlignment="center"
                    android:layout_weight="100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="8th Class"
                    android:textSize="14sp"
                    android:id="@+id/student_class"
                    android:paddingVertical="5dp"/>
                <TextView
                    android:textAlignment="center"
                    android:layout_weight="100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CBSE Board"
                    android:textSize="14sp"
                    android:id="@+id/board"
                    android:paddingVertical="5dp"/>
            </LinearLayout>

        </LinearLayout>





    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner_border"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:contextClickable="false"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:strokeColor="@color/blue_accent"
        app:strokeWidth="1.5dp"
        android:layout_below="@+id/card_1">




    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>